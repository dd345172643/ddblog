<%- include header %>
	<% if(post) { %>
	<% if(user&&user.name==post.name){ %>
	<span>
		<a href="/edit/<%= post.name %>/<%= post.timeStamp %>/<%= post.title %>" class="edit">编辑</a>
		<a href="/remove/<%= post.name %>/<%= post.timeStamp %>/<%= post.title %>" class="edit">删除</a>
	</span>
	<% } %>
	<p class="info">
		作者：<a href='/user/<%= post.name %>'><%- post.name %></a>
		日期：<span><%- post.time.minute %></span>
	</p>
	<p><%- post.cont %></p>
	<% } %>
<%- include footer %>
			
  
